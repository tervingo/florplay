---
const { id, trigger } = Astro.props;
---

<div class="texto-con-enlace">
  <slot name="texto-principal" />
  <a href="#" id={`abrir-${id}`} class="saber-mas">{trigger}</a>
</div>

<div id={id} class="popup">
  <div class="popup-contenido">
    <span class="cerrar-popup">&times;</span>
    <slot name="contenido-popup" />
  </div>
</div>

<style>
.texto-con-enlace {
    display: inline-block; /* Cambiado de contents a inline-block */
}

.saber-mas {
    color: #0066cc;
    text-decoration: none;
    display: inline-block;
    margin-left: 10px;
}


  .popup {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
  }

  .popup-contenido {
    position: relative;
    background-color: floralwhite;
    margin: 15% auto;
    padding: 20px;
    width: 70%;
    max-width: 500px;
    border-radius: 5px;
  }

  .cerrar-popup {
    position: absolute;
    right: 10px;
    top: 5px;
    color: #666;
    font-size: 24px;
    font-weight: bold;
    cursor: pointer;
  }

  .cerrar-popup:hover {
    color: #000;
  }
</style>

<script>
  function setupModal(id) {
    const popup = document.getElementById(id);
    const boton = document.getElementById(`abrir-${id}`);
    const cerrar = popup.querySelector('.cerrar-popup');

    boton.onclick = function(e) {
      e.preventDefault();
      popup.style.display = "block";
    }

    cerrar.onclick = function() {
      popup.style.display = "none";
    }

    window.onclick = function(event) {
      if (event.target == popup) {
        popup.style.display = "none";
      }
    }
  }

  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.popup').forEach(popup => {
      setupModal(popup.id);
    });
  });
</script>