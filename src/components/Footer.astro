---
// Footer.astro
import { Facebook, Instagram, Youtube } from 'lucide-react';
// Note: TikTok no viene en lucide-react, usaremos un SVG personalizado
---

<footer class="footer">
  <div class="footer-content">
    <div class="social-icons">
      <a href="https://www.facebook.com/FlorDeAnatomia" target="_blank" rel="noopener noreferrer" class="social-link">
        <Facebook size={24} />
      </a>
      <a href="https://www.instagram.com/flordeanatomia" target="_blank" rel="noopener noreferrer" class="social-link">
        <Instagram size={24} />
      </a>
      <a href="https://www.tiktok.com/@flor_de_anatomia" target="_blank" rel="noopener noreferrer" class="social-link">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
        </svg>
      </a>
      <a href="https://www.youtube.com/channel/UCttmFf0pB3eHjvZAS8m1eKA" target="_blank" rel="noopener noreferrer" class="social-link">
        <Youtube size={24} />
      </a>
    </div>
    <p class="copyright">&copy; 2025 Flor de Anatom√≠a</p>
  </div>
</footer>

<style>
  .footer {
    background-color: silver;
    padding: 2rem 0;
    margin-top: 2rem;
  }
  
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    text-align: center;
  }

  .social-icons {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 1rem;
  }

  .social-link {
    color: #666;
    transition: color 0.3s ease;
  }

  .social-link:hover {
    color: #000;
  }

  .copyright {
    color: #666;
    font-size: 0.9rem;
  }
</style>